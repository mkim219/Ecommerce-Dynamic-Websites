<div class="box" style="display:flex">
    <div class="indexCol"></div>
    <div class="columnMiddleIndex">
        <section>
            <div class="category"><hr style="width=30%">Category<hr style="width=30%"></div>
            {{#each category}}
            <div class="row-1">
                <div class="column-1">
                    <div class="card">
                        <img src={{this.image}} alt="Category" style="width:105%" >
                        <div class="container">
                            <h4><b>{{this.title}}</b></h4>
                            <p>{{this.price}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </section>

        {{!-- Best Seller --}}
        <div class="columnBest">
            <div class="bestitem"><hr> Best Item <hr></div>
            <section>
                <div class="scrollmenu">
                    {{#each BestSeller}}
                    <img class="{{this.isBest}}" src="{{this.image}}" alt="Best_Sellar" style="width:20%; height: 50%">
                    {{/each}}
                </div>
            </section>
        </div>
    </div>

    <div class="indexCol">
        <div class="side bannder" style="margin-top: 100px;">
            <img src="sidebanner.png" alt="side-banner" width="200">
        </div>
    </div>
</div>

<script>

    const hideAllProductList = function () {
        const productLists = document.querySelectorAll(".no");
        Object.entries(productLists).forEach(entry => {
            entry[1].style.display = "none";
        });
    };

    const showProductList = function () {
        const productList = document.querySelectorAll(".yes");
        productList.style.display = "block";
    };

    hideAllProductList();
    showProductList()

</script>